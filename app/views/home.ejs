<html>
<head>
  <title>OpenPaste - create a new paste</title>
  <meta charset="utf-8" />
  <meta name="robots" content="noindex,nofollow" />
</head>
<body>
  <div id="tips">
    CTRL + S = <a onclick="saveContent()" style="cursor: pointer; text-decoration: underline;">Save paste</a><br>
    By <a href="https://aljaxus.eu" target="_blank">Aljaxus</a>
  </div>
  <textarea 
    spellcheck="false" 
    id="textarea"
    placeholder="Save with ctrl+s"
  ></textarea>
</body>
</html>
<script src="/application.js"></script>
<script>
var input = document.getElementById('textarea');
var isCtrl = false;

function saveContent () {
  var content = input.value;
  if (content.length > 0) {
    var xhr = new XMLHttpRequest();
    xhr.open("POST", location.href+'paste', true);
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.send(JSON.stringify({ content: content }))
    xhr.onload = function () {
      if (xhr.status === 200) {
        const mypastes = getCookie('openpaste_mypastes') || ['openpaste_mypastes', '[]'];
        mypastes[1] = JSON.parse(mypastes[1]);
        mypastes[1].push(String(xhr.responseText));
        setCookie('openpaste_mypastes', JSON.stringify(mypastes[1]), 99999);
        location.href = location.href+xhr.responseText;
      } else { 
        console.warn(xhr.status);
      }
    }
  }
  return false
}

document.onkeyup = function (e) { 
  if (e.keyCode === 17) {
    isCtrl = false; 
  }
}
document.onkeydown = function (e) {
  if(e.keyCode === 17) {
    isCtrl = true;
  }
  if(e.keyCode === 83 && isCtrl === true) {
    return saveContent();
  }
}
</script>
